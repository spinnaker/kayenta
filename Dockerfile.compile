FROM ubuntu:eoan
MAINTAINER sig-platform@spinnaker.io

RUN apt-get update \
    && apt-get -y upgrade \
    && apt-get install -y \
        openjdk-8-jdk-headless \
    && apt-get clean

ENV GRADLE_USER_HOME /workspace/.gradle
ENV GRADLE_OPTS -Xmx2048m
CMD ./gradlew --no-daemon kayenta-web:installDist -x test
